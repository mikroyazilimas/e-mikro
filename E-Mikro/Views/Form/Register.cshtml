@model E_Mikro.Models.Contentful.Page
@{
    Layout = Paths.Views.Layout.Main;
}

<div class="registerArea">
    <div class="left">
        <a class="loginBtn">Giriş Yap</a>
        <a class="registerBtn">Kayıt Ol</a>
        <div class="clear"></div>
        <form class="registerForm">
            <div class="form-element">
                <label for="tckn" class="title">T.C. Kimlik No*</label>
                <input name="tckn" id="tckn" type="number" maxlength="11">
            </div>
            <div class="form-element">
                <label for="name" class="title">Adınız*</label>
                <input name="name" id="name" type="text">
            </div>
            <div class="form-element">
                <label for="surname" class="title">Soyadınız*</label>
                <input name="surname" id="surname" type="text">
            </div>
            <div class="form-element">
                <label for="email" class="title">e-Posta Adresiniz*</label>
                <input name="email" id="email" type="text">
            </div>
            <div class="form-group">
                <div class="form-element">
                    <label for="pass" class="title">Parola*</label>
                    <input name="pass" id="pass" type="password">
                </div>

                <div class="form-element">
                    <label for="passAgain" class="title">Parola Doğrula*</label>
                    <input type="password" name="passAgain" id="passAgain">
                </div>
            </div>
            <ul class="accordion  mobile">
                <li>
                    <div class="aTitle">
                        Kişisel Veriler Bilgilendirme Metni
                    </div>
                    <div class="aDetail">
                        Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the
                        industry's
                        standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it
                        to
